<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/mine_background"
    tools:context=".fragment.servers.ServersFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_servers"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin540dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144"
        tools:listitem="@layout/list_games_item" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_toServer"
        android:layout_width="@dimen/margin145dp"
        android:layout_height="@dimen/margin60dp"
        android:layout_marginTop="@dimen/margin12dp"
        android:layout_marginBottom="@dimen/margin32dp"
        android:background="@drawable/custom_background"
        android:focusable="true"
        android:fontFamily="@font/minecraft_font"
        android:text="@string/back"
        android:textAllCaps="false"
        android:textColor="@color/diamond"
        android:textSize="@dimen/margin16sp"
        app:backgroundTint="@color/width_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView_servers"
        app:layout_constraintVertical_bias="0.166" />


</androidx.constraintlayout.widget.ConstraintLayout>